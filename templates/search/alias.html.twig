{% extends 'dashboard.html.twig' %}

{% block content_title %}{{ "Result(s) for" | trans }} "{{ search }}"{% endblock %}

{% block content_body %}
    <ul class="list-group list-group-flush">
        {% if results is empty %}
            <p class="text-center">{{ "No result found" | trans }}</p>
        {% endif %}
        {% for result in results %}
            <li class="list-group-item">
                {{ result.alias }} <small>({{ "for" | trans }} {{ result.target }})</small>
                <a class="btn btn-secondary btn-sm float-right"
                   href="{{ path('alias_edit', {id: result.id}) }}">
                    <i class="fas fa-eye mr-1"></i> {{ "see" | trans }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}
