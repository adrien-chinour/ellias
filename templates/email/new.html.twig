{% extends 'dashboard.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.11/dist/css/select2.min.css" rel="stylesheet"/>
{% endblock %}

{% block content_title %}Ajouter un alias{% endblock %}

{% block content_body %}
    {{ form_start(form) }}
    {{ form_row(form.target) }}

    <div class="form-group">
        {{ form_label(form.alias) }}
        <div class="input-group">
            {{ form_widget(form.alias) }}
            <div class="input-group-append">
                <span class="input-group-text" id="input-append-alias"></span>
            </div>
        </div>
    </div>
    {{ form_row(form.tags) }}
    <div class="row">
        <div class="col-sm-6">
            <a class="btn btn-block btn-secondary" href="{{ path('email_index') }}">Annuler</a>
        </div>
        <div class="col-sm-6">
            <button class="btn btn-block btn-success">Sauvegarder</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.11/dist/js/select2.min.js"></script>
    <script src="{{ asset('javascripts/add-alias.js') }}"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                allowClear: true,
                tags: true
            });
        });
    </script>
{% endblock %}
