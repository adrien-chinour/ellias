<form method="post" action="{{ path('email_delete', {'id': email.id}) }}"
      onsubmit="return confirm('{{ 'Are you sure ?' | trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ email.id) }}">
    <button class="btn btn-block btn-danger">{{ "Delete this alias" | trans }}</button>
</form>
