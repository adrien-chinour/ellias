{% extends 'dashboard.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/select2@4.0.11/dist/css/select2.min.css" rel="stylesheet"/>
{% endblock %}

{% block content_title %}Modifier un alias{% endblock %}

{% block content_body %}
    <a href="{{ path('email_index') }}">Revenir en arri√®re</a>
    {{ form_start(form) }}
    {{ form_row(form.tags) }}
    <button class="btn btn-block btn-primary">Modifier</button>
    {{ form_end(form) }}
    <div class="mb-3"></div>
    {{ include('email/_delete_form.html.twig') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/select2@4.0.11/dist/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.select2').select2({
                allowClear: true,
                tags: true
            });
        });
        let option;
        {% for site in email.tags %}
        option = new Option("{{ site }}", "{{ site }}", true, true);
        $('.select2').append(option).trigger('change');
        {% endfor %}
    </script>
{% endblock %}
