{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ 'Connexion' | trans }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
    <form class="form-signin" method="post">
        <div class="card">
            <div class="card-header bg-dark">
                <h3 class="text-white mb-0 atma">{{ 'site.title' | trans }}</h3>
            </div>
            <div class="card-body">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">
                            <i class="fas fa-user"></i>
                        </span>
                    </div>
                    <input type="text" value="{{ last_username }}" name="uuid" id="inputUuid" class="form-control"
                           placeholder="{{ 'Username' | trans }}" required autofocus>
                </div>
                <div class="input-group mb-3">
                    <div class="input-group-prepend">
                        <span class="input-group-text" id="basic-addon1">
                            <i class="fas fa-key"></i>
                        </span>
                    </div>
                    <input type="password" name="password" id="inputPassword"
                           class="form-control" placeholder="{{ 'Password' | trans }}" required>
                </div>
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-lg btn-dark btn-block" type="submit">{{ 'Connexion' | trans }}</button>
            </div>
        </div>
    </form>
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('login') }}
{% endblock %}
