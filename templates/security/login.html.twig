{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ 'Connexion' | trans }}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block body %}
    <form class="form-signin" method="post">
        <div class="card">
            <div class="card-header bg-dark">
                <h3 class="text-white mb-0 atma">{{ 'site.title' | trans }}</h3>
            </div>
            <div class="card-body">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div class="form-outline mt-2">
                    <input type="text" name="uuid" id="inputUuid" class="form-control" value="{{ last_username }}"
                           required autofocus/>
                    <label class="form-label" for="inputUuid">{{ 'Username' | trans }}</label>
                </div>

                <div class="form-outline mt-2">
                    <input type="password" name="password" id="inputPassword" class="form-control" required/>
                    <label class="form-label" for="inputPassword">{{ 'Password' | trans }}</label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-lg btn-dark btn-block mt-2" type="submit">{{ 'Connexion' | trans }}</button>
            </div>
        </div>
    </form>
{% endblock %}
